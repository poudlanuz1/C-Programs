//WAP to check greatest of three entered numbers in C.
#include <stdio.h>
int main(){
	float num1,num2,num3;
	printf("Enter the first number:");
	scanf("%f",&num1);
	printf("Enter the second number:");
	scanf("%f",&num2);
	printf("Enter the third number:");
	scanf("%f",&num3);
	if (num1>num2 && num1>num3){
		printf("%.2f is greatest.",num1);
	}
	else if (num2>num3){
		printf("%.2f is the greatest.\n",num2);
	}
	else if (num3>num1){
		printf("%.2f is the greatest.\n",num3);
	}
	else printf("The numbers are same:%.2f\n",num1);
	return 0;	
}
